<h1 class="text-center"><%= t(".edit_user") %></h1>
<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <%= form_for [:admin, @user] do |f| %> 
      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :address %><br />
        <%= f.text_field :address, class: "form-control" %>
      </div>
      
      <div class="field">
        <%= f.label :phone %><br />
        <%= f.text_field :phone, class: "form-control" %>
      </div>
      
      <div class="field">
        <%= f.label :password %><br />
        <%= f.password_field :password, class: "form-control" %>
      </div> 

      <div class="field mt-3 border">
        <%= f.label :role %><br />
        <ul class="list-unstyled">
          <li class="ml-5">
            <%= f.radio_button :admin, false %>
            <%= f.label(:admin, t(".admin")) %>
          </li>
          <li class="ml-5">
            <%= f.radio_button(:admin, true, checked: "checked") %>
            <%= f.label(:admin, t(".normal_user")) %>
          </li>
        </ul>
      </div>

      <div class="actions mt-2">
        <%= f.submit t(".update_user"), class: "btn btn-primary form-control" %>
      </div>
    <% end %>
  </div>
</div>
