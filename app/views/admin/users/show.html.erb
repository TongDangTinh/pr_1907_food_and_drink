<div class="container">
  <%= link_to t(".back_to_all_user"), admin_users_path, 
    class: "btn btn-primary mb-1" %>
  <div class="row">
    <div class="col">
      <table class="table table-bordered width_table">
        <tr class="background_tr">
          <th><%= t(".name") %></th>
          <th><%= t(".email") %></th>
          <th><%= t(".address") %></th>
          <th><%= t(".phone") %></th>
          <th><%= t(".role") %></th>
        </tr>
        
        <tr>
          <th><%= @user.name %></th>
          <th><%= @user.email %></th>
          <th><%= @user.address %></th>
          <th><%= @user.phone %></th>
          <th><%= @user.role %></th>
        </tr>
      </table>
    </div>
  </div>
</div>
