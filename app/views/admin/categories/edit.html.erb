<% provide :title, t(".edit_category") %>
<div class="row">
  <div class="col-md-3"></div>
  <div class="col-md-6">
    <%= form_for [:admin, @category] do |f| %>
      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
      <div class="field mt-2">
        <%= f.submit t(".update"), class: "btn btn-primary form-control" %>
      </div>
    <% end %>
  </div>
</div>
