<% provide :title, t(".all_categores") %>
<%= link_to t(".create_new_category"), new_admin_category_path,
  class: "btn btn-primary mb-1" %>
<table class="table table-bordered width_tabl">
  <tr class="background_tr">
    <th><%= t(".name") %></th>
    <th><%= t(".show_all_products") %></th>
    <th><%= t(".edit") %></th>
    <th><%= t(".delete") %></th>
  </tr>
  <% @categories.each do |category| %> 
    <tr>
      <th><%= category.name %></th>
      <th><%= link_to t(".show_all_products"), admin_category_path(category.id) %></th>
      <th><%= link_to t(".edit"), edit_admin_category_path(category.id) %></th>
       <td><%= link_to t(".delete"), admin_category_path(category.id),
        method: :delete,
        data: { confirm: t(".are_you_sure") } %></td>
    </tr>
  <% end %> 
</table>
